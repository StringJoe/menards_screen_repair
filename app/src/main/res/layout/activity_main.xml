<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sizeBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@color/menards_green"
        android:text="Screen Size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/materialsBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@color/menards_green"
        android:text="Screen Materials"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/costBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@color/menards_green"
        android:text="Total Screen Cost"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/measurementBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@color/menards_green"
        android:text="Frame Measurements"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        />

</LinearLayout>